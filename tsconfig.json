{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ]
}
